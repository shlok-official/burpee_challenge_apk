<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.neu.madcourse.shlokdixit1.TrickestPart.TrickestPart">

    <TextView
        android:id="@+id/Titleburpee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Burpee"
        android:layout_alignParentTop="true"
        android:text="TRICKIEST PART"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Burpeecount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Burpee"
        android:layout_centerVertical="true"
        android:textColor="#d4e157"
        android:text="BURPEE COUNT"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/Burpee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="100dp"
        android:hint="0"
        android:textColorHighlight="#FFFFFF" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#3b5998"
        android:text="Share on Facebook+" />


</RelativeLayout>
