<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/wordlist_background"
    android:elevation="@dimen/elevation_high"
    android:orientation="vertical"

    android:paddingBottom="30sp"
    android:paddingLeft="50sp"
    android:paddingRight="50sp"
    android:paddingTop="30sp"
    tools:context="edu.neu.madcourse.shlokdixit1.WordGame.Parent_Controls">


    <TextView
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WORD GAME"
        android:background="#ffffff"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="@dimen/menu_text_size" />

    <Button
        android:id="@+id/continue_button_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/menu_button_margin"
        android:background="@drawable/mybutton"
        android:padding="@dimen/menu_button_padding"
        android:text="@string/continue_label" />

    <Button
        android:id="@+id/new_button_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/menu_button_margin"
        android:background="@drawable/mybutton"
        android:padding="@dimen/menu_button_padding"
        android:paddingEnd="50sp"
        android:paddingStart="50sp"
        android:text="@string/new_game_label" />


    <Button
        android:id="@+id/quit_button_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/menu_button_margin"
        android:background="@drawable/mybutton"
        android:padding="@dimen/menu_button_padding"
        android:text="QUIT" />

    <Button
        android:id="@+id/about_button_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/menu_button_margin"
        android:layout_toRightOf="@+id/togglebutton"
        android:background="@drawable/mybutton"
        android:padding="@dimen/menu_button_padding"
        android:text="@string/about_label"
        />

    <Button
        android:id="@+id/ack_button_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/menu_button_margin"
        android:background="@drawable/mybutton"
        android:padding="@dimen/menu_button_padding"
        android:text="ACKNOWLEDGEMENTS"/>

    <Button
        android:id="@+id/communications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/menu_button_margin"
        android:background="@drawable/mybutton"
        android:padding="@dimen/menu_button_padding"
        android:text="COMMUNICATIONS" />


    <ToggleButton
        android:id="@+id/togglebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:elevation="@dimen/elevation_low"
        android:padding="@dimen/menu_button_padding"
        android:textOff="Sound Off"
        android:textOn="Sound On " />

</LinearLayout>

