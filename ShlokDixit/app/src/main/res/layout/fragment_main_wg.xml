
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:background="@drawable/menu_background"
   android:elevation="@dimen/elevation_high"
   android:orientation="vertical"
   android:padding="@dimen/menu_padding">

   <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/menu_space"
      android:text="WORD GAME"
      android:textAppearance="?android:textAppearanceLarge"
      android:textSize="@dimen/menu_text_size"
       android:gravity="center"
       android:layout_marginLeft="10sp"/>

   <Button
       android:id="@+id/continue_button_wg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/menu_button_margin"
       android:padding="@dimen/menu_button_padding"
       android:text="@string/continue_label"
       android:background="@drawable/mybutton"/>

   <Button
       android:id="@+id/new_button_wg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_margin="@dimen/menu_button_margin"
       android:padding="@dimen/menu_button_padding"
       android:text="@string/new_game_label"
       android:background="@drawable/mybutton"/>


    <Button
        android:id="@+id/quit_button_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/menu_button_margin"
        android:padding="@dimen/menu_button_padding"
        android:text="QUIT"
        android:background="@drawable/mybutton"/>
    <Button
        android:id="@+id/about_button_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/togglebutton"
        android:elevation="@dimen/elevation_low"
        android:layout_margin="@dimen/menu_button_margin"
        android:padding="@dimen/menu_button_padding"
        android:text="@string/about_label"
        android:background="@drawable/mybutton"/>
    <Button
        android:id="@+id/ack_button_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/menu_button_margin"
        android:padding="@dimen/menu_button_padding"
        android:text="ACKNOWLEDGEMENTS"
        android:background="@drawable/mybutton"/>

    <ToggleButton
        android:id="@+id/togglebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_low"
        android:layout_below="@+id/pause"
        android:textOff="Sound Off"
        android:textOn="Sound On "
        android:background="@drawable/mybutton"
        />

</LinearLayout>
